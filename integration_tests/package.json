{
  "name": "integration-tests",
  "version": "1.0.0",
  "description": "Project to run native and browser fro android and ios using cucumber",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf typeScript/",
    "clean-build": "npm run clean && npm run build",
    "bs_android": "PLATFORM_NAME=android ENV=browser_stack wdio ./config/Gelato_Native/browserStackAndroid.config.ts",
    "bs_ios": "PLATFORM_NAME=ios ENV=browser_stack wdio ./config/Gelato_Native/browserStackIos.config.ts",
    "android": "PLATFORM_NAME=android ENV=local wdio ./config/Gelato_Native/android.config.ts",
    "ios": "PLATFORM_NAME=ios ENV=local wdio ./config/Gelato_Native/ios.config.ts",
    "lint": "eslint .",
    "pretest": "npm run clean-build",
    "test": "npm run app-test",
    "report": "allure generate allure-result --clean",
    "install-dep": "NODE_TLS_REJECT_UNAUTHORIZED=0 npm install"
  },
  "keywords": [
    "appium",
    "webdriverio",
    "typescript",
    "mobile automation",
    "behaviour driven development",
    "bdd",
    "webdriverJS",
    "gherkin",
    "automation testing"
  ],
  "author": "harsha.sharma@gelato.com",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@wdio/allure-reporter": "^7.20.0",
    "@wdio/appium-service": "^7.5.2",
    "@wdio/cli": "^7.5.2",
    "@wdio/local-runner": "^7.5.2",
    "@wdio/mocha-framework": "^7.19.5",
    "@wdio/spec-reporter": "^7.5.2",
    "@wdio/sync": "^7.5.2",
    "appium": "^2.0.0-beta.40",
    "appium-flutter-driver": "^1.5.0",
    "appium-uiautomator2-driver": "^2.4.5",
    "carthage": "^1.0.6",
    "chai": "^4.3.6",
    "chromedriver": "^91.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^7.32.0",
    "ios-deploy": "^1.11.4",
    "ios-simulator-set-location": "^1.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-report-generator": "^6.2.0",
    "ts-node": "^10.7.0",
    "tslint-to-eslint-config": "^2.12.3",
    "typescript": "^4.7.4",
    "wdio-cucumberjs-json-reporter": "^4.4.1",
    "wdio-spec-reporter": "^0.1.5",
    "webdriverio": "^7.19.5"
  },
  "dependencies": {
    "@cucumber/cucumber": "^8.1.2",
    "@types/cucumber": "^7.0.0",
    "@wdio/cucumber-framework": "^7.19.5",
    "allure-commandline": "^2.18.1",
    "assert": "^2.0.0",
    "multiple-cucumber-html-reporter": "^1.20.0",
    "tslog": "^3.3.3"
  }
}
